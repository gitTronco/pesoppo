<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    tools:context="com.troncodroide.pesoppo.activities.ActivitiesFragment">

    <LinearLayout
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartResumeActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/material_elevation_shadow"
            android:minHeight="250dp"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/material_elevation_shadow"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:background="@drawable/material_elevation_shadow"
                android:weightSum="100">

                <com.troncodroide.pesoppo.customviews.AwesomeTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Interrupciones"
                    android:layout_weight="100"
                    android:textAppearance="@android:style/TextAppearance.Medium"/>

                <com.troncodroide.pesoppo.customviews.AwesomeButton
                    android:id="@+id/ativityshow_add_interruption"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:background="@null"
                    android:text="@string/fa_plus_circle"
                    android:layout_gravity="center"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    />
            </LinearLayout>

            <com.troncodroide.pesoppo.customviews.ExpandedListView
                android:id="@+id/activityshow_list_interruptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_material_light" />

            <com.troncodroide.pesoppo.customviews.AwesomeTextView
                android:id="@+id/ativityshow_interruptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                />
            <com.troncodroide.pesoppo.customviews.AwesomeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/material_elevation_shadow"
                android:padding="15dp"
                android:text="Tiempos"
                android:textAppearance="@android:style/TextAppearance.Medium"
                />

            <com.troncodroide.pesoppo.customviews.AwesomeTextView
                android:id="@+id/ativityshow_time_dedication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                />

            <com.troncodroide.pesoppo.customviews.AwesomeTextView
                android:id="@+id/ativityshow_time_estimado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textAppearance="@android:style/TextAppearance.Medium"
                 />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
