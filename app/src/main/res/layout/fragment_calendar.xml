<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.troncodroide.pesoppo.calendar.CalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/fragmentCalendarContainer"
            android:name="com.troncodroide.pesoppo.calendar.CalendarFragment"
            android:layout_width="match_parent"
            android:layout_height="270dp" />

        <com.troncodroide.pesoppo.customviews.ExpandedListView
            android:id="@+id/wrapper_calendar_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</ScrollView>
