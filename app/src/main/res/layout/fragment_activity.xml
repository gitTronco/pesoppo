<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.troncodroide.pesoppo.activities.ActivitiesFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/activities_keys_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"/>
        <AutoCompleteTextView
            android:id="@+id/activities_keys_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Clave"/>
        <TextView
            android:theme="@style/Widget.AppCompat.EditText"
            android:id="@+id/activities_keys_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha inicio"/>
        <EditText
            android:id="@+id/activities_keys_estimated_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiempo estimado"/>
        <EditText
            android:id="@+id/activities_keys_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:minLines="3"
            android:hint="DescripciÃ³n"/>

        <Button
            android:id="@+id/activities_keys_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CREAR"
            android:textColor="@color/blanco"
            android:background="@color/azul"/>
        </LinearLayout>

</ScrollView>
